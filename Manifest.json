{
    "manifest_version": 2,
    "name": "Chrome Activity Monitor",
    "version": "1.0",
    "permissions": [
      "history",
      "activeTab"
    ],
    "background": {
      "scripts": ["scripts.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts.js"]
      }
    ],
    "browser_action": {
      "default_popup": "config.html",
      "default_icon": "icon.png"
    }
  }
  